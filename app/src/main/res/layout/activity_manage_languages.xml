<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Existing controls would be here; we include critical IDs used by Downloader.java -->

            <!-- Download size indicator (expected by Downloader.java) -->
            <TextView
                android:id="@+id/downloadSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB / 0 MB"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <!-- Import local voice button you already use -->
            <Button
                android:id="@+id/button_import_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import local voice"
                android:layout_marginTop="12dp" />

            <!-- Imported voices list -->
            <TextView
                android:id="@+id/imported_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imported voices (tap to activate, long-press to delete)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <ListView
                android:id="@+id/imported_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp" />

            <!-- Button expected by Downloader.java; made GONE until downloads finish -->
            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_main"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:onClick="startMain" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
