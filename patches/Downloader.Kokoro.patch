case KOKORO: {
    final String sel = selectedLabel; // e.g., "kokoro-en-v1_0"
    final String url = KOKORO_URLS.get(sel);
    if (url == null) {
        toast(activity, "Unknown Kokoro model: " + sel);
        return;
    }
    KokoroInstaller.downloadAndInstall(activity, url, sel, new KokoroInstaller.Callback() {
        @Override public void onSuccess(File modelDir) { toast(activity, "Installed: " + sel); }
        @Override public void onError(String message) { toast(activity, "Kokoro install failed: " + message); }
    });
    break;
}
