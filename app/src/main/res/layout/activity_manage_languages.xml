<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Download sections expected by original code -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/piper_models"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"/>

            <ListView
                android:id="@+id/piperModelList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coqui_models"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"/>

            <ListView
                android:id="@+id/coquiModelList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:layout_marginBottom="12dp"/>

            <!-- NEW: download size text used by Downloader.java -->
            <TextView
                android:id="@+id/downloadSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <!-- NEW: start button toggled by Downloader.java; calls ManageLanguagesActivity.startMain -->
            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_main"
                android:onClick="startMain"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Imported voices section -->
            <TextView
                android:id="@+id/imported_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Imported voices (tap to activate, long-press to delete)"
                android:textStyle="bold"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp">

                <Button
                    android:id="@+id/buttonImportLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import local voice" />
            </LinearLayout>

            <ListView
                android:id="@+id/importedList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
