<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Piper models -->
            <TextView
                android:id="@+id/label_piper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/piper_models"
                android:layout_marginTop="4dp" />

            <ListView
                android:id="@+id/piperModelList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:layout_marginBottom="8dp" />

            <!-- Coqui models -->
            <TextView
                android:id="@+id/label_coqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coqui_models"
                android:layout_marginTop="4dp" />

            <ListView
                android:id="@+id/coquiModelList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:layout_marginBottom="12dp" />

            <!-- Download size indicator -->
            <TextView
                android:id="@+id/downloadSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 MB / 0 MB"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <!-- Import local voice -->
            <Button
                android:id="@+id/buttonImportLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import local voice"
                android:layout_marginTop="12dp" />

            <!-- Kokoro section -->
            <TextView
                android:id="@+id/label_kokoro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kokoro (female styles available)"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinnerKokoroQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/buttonInstallKokoro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Install Kokoro"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textKokoroStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="4dp" />

            <!-- Imported voices -->
            <TextView
                android:id="@+id/imported_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imported voices (tap to activate, long-press to delete)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <ListView
                android:id="@+id/importedList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp" />

            <!-- Start button -->
            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_main"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:onClick="startMain" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
