<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="24dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- PIPER -->
        <TextView
            android:id="@+id/label_piper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/piper_models"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerPiper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <!-- COQUI -->
        <TextView
            android:id="@+id/label_coqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coqui_models"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerCoqui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <!-- KOKORO -->
        <TextView
            android:id="@+id/label_kokoro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kokoro_models"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp" />

        <Spinner
            android:id="@+id/spinnerKokoro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <!-- Download size indicator used by Downloader.java (kept hidden) -->
        <TextView
            android:id="@+id/downloadSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 MB / 0 MB"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- INSTALL button -->
        <Button
            android:id="@+id/buttonInstallModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/install" />

        <!-- IMPORT local -->
        <Button
            android:id="@+id/button_import_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/import_local_voice" />

        <!-- IMPORTED voices header -->
        <TextView
            android:id="@+id/imported_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imported_voices_header"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" />

        <!-- Imported voices list (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerImported"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- Start button expected by Downloader.java (hidden) -->
        <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_main"
            android:layout_marginTop="16dp"
            android:visibility="gone" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>