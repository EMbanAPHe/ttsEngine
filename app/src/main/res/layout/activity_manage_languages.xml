<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Existing sections (download lists) are assumed above -->

        <!-- Imported voices section -->
        <TextView
            android:id="@+id/imported_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Imported voices (tap to activate, long-press to delete)"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_import_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Import local voice" />

        <ListView
            android:id="@+id/imported_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:dividerHeight="1dp" />

        <!-- Adapters 'piperModelList' and 'coquiModelList' are expected elsewhere in this layout in your base file -->

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
