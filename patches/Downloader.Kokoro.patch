private static final Map<String, String> KOKORO_URLS = new HashMap<String, String>() {{
    put("kokoro-en-v1_0", "REPLACE_WITH_ARCHIVE_URL_FOR_V1_0");
    put("kokoro-en-v0_19", "REPLACE_WITH_ARCHIVE_URL_FOR_V0_19");
